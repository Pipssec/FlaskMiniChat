<Menu>:
    FloatLayout:
        AsyncImage:
            source: 'data/logo3.jpg'
    FloatLayout:
        Button:
            text: "2:1"
            pos_hint: {'x': .15, 'y': .6}
            size_hint: .2, .2
            font_size: 30
            on_press: root.manager.current = '2k1'

        Button:
            text: "1,5:1"
            pos_hint: {'x': .65, 'y': .6}
            size_hint: .2, .2
            font_size: 30
            on_press: root.manager.current = '15k1'

        Label:
            text: "Cахар : Вода"
            pos_hint: {'x': .0, 'y': .9}
            size_hint: 1, .1
            font_size: 30

        Button:
            text: "1:1"
            pos_hint: {'x': .15, 'y': .3}
            size_hint: .2, .2
            font_size: 30
            on_press: root.manager.current = '1k1'

        Button:
            text: "1:1,5"
            pos_hint: {'x': .65, 'y': .3}
            size_hint: .2, .2
            font_size: 30
            on_press: root.manager.current = '1k15'

